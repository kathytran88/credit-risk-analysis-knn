{
  "version": 2,
  "builds": [
    {
      "src": "my-ml-app/next.config.mjs",
      "use": "@vercel/next"
    },
    {
      "src": "my-ml-app/flask_app/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/my-ml-app/flask_app/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/my-ml-app/$1"
    }
  ]
}
